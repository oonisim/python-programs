steps:
  # Install dependencies
  - name: python
    entrypoint: pip
    args: ["install", "--upgrade", "-r", "requirements.txt"]

  # Run unit tests
  - name: python
    entrypoint: python
    dir: "src/serving"
    args: ["-m", "pytest"]

  # Docker Build
  - name: 'gcr.io/cloud-builders/docker'
    args: [
      'build',
      '-t',
      'us-central1-docker.pkg.dev/${PROJECT_ID}/${REPO_NAME}/myimage:${SHORT_SHA}',
      '-f',
      'src/serving/Dockerfile',
      '.'
    ]

  # Docker push to Google Artifact Registry
  - name: 'gcr.io/cloud-builders/docker'
    args: ['push',  'us-central1-docker.pkg.dev/${PROJECT_ID}/${REPO_NAME}/diabetes:${SHORT_SHA}']
